# Set to YOUR local path to the directory containing LightCurveEngine.c 
SCRIPT_DIR=$( cd -- "$( dirname -- "${BASH_SOURCE[0]}" )" &> /dev/null && pwd )
export LCEDIR="/Users/liamrobinson/Documents/PyLightCurves/src/engine"
export MODELDIR="/Users/liamrobinson/Documents/PyLightCurves/models"

python3 -m venv $SCRIPT_DIR --upgrade-deps
if test -f bin/activate; then
    source bin/activate

    pip3 install -r config/requirements.txt

    # Build all executables
    cd $LCEDIR 
    make -f $LCEDIR/Makefile all 
    cd -

    # Runs all unit tests
    python3 unit_tests.py
else
    echo "python venv didn't initialize correctly, Liam messed up"
fi
